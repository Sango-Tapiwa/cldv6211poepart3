@model IEnumerable<EventEase.Models.Venues>

@{
    ViewData["Title"] = "Venues";
}

<div class="container">
    <h1 class="my-4 text-center text-success">Venue Management</h1>

    <div class="mb-3">
        <a class="btn btn-success" asp-action="Create">Create New Venue</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.VenueName)</th>
                        <th>@Html.DisplayNameFor(model => model.Location)</th>
                        <th>@Html.DisplayNameFor(model => model.Capacity)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>Venue Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.VenueName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Location)</td>
                            <td>@Html.DisplayFor(modelItem => item.Capacity)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageURL))
                                {
                                    <img src="@item.ImageURL" alt="Venue Image" width="100" height="100" style="object-fit: cover; border-radius:12px" />
                                }
                                else
                                {
                                    <span>No Image</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.VenueID">Edit</a>
                                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.VenueID">Details</a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.VenueID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>